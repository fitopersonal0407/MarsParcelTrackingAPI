@namespace MarsParcelTracker.Blazor.Components.Pages
@page "/parcel"
@rendermode InteractiveServer
@inherits ParcelsBase

<PageTitle>Get a parcel</PageTitle>

<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            <!-- Input Form -->
            <div class="mb-3">
                <label for="barcodeInput" class="form-label">Barcode:</label>
                <input @bind="_barcode" @bind:event="oninput"
                       type="text" class="form-control" id="barcodeInput"
                       placeholder="Enter value for barcode" />
                @if (!string.IsNullOrEmpty(validationMessage))
                {
                    <div class="text-danger mt-1">@validationMessage</div>
                }
            </div>

            <!-- Action Buttons -->
            <div class="d-flex gap-2">
                <button @onclick="Submit" class="btn btn-primary" disabled="@isLoading">
                    @(isLoading ? "Processing..." : "Submit")
                </button>

                <button @onclick="Clear" class="btn btn-secondary">Clear</button>

                <button @onclick="ShowHelp" class="btn btn-outline-info">Help</button>
            </div>
        </div>
    </div>

    <!-- Results Display -->
    @if (!string.IsNullOrEmpty(resultMessage))
    {
        <div class="alert alert-info mt-3">
            <h6>Result:</h6>
            <p class="mb-0">@resultMessage</p>
            <small class="text-muted">Barcode value: <strong>@_barcode</strong></small>
        </div>
    }


    @if (isLoading)
    {
        <div class="text-center mt-5">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Loading parcel details...</p>
        </div>
    }
    else if (_entityHasBeenSearched)
    {
        if (_entity == null)
        {
            <div class="alert alert-danger mt-4">
                <h4>Parcel not found</h4>
                <p>The requested parcel could not be found.</p>
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-body">
                    <p><strong>Barcode:</strong> @_entity.Barcode</p>
                    <p><strong>Status:</strong> @_entity.Status</p>
                    <p><strong>Sender:</strong> @_entity.Sender</p>
                    <p><strong>Recipient:</strong> @_entity.Recipient</p>
                    <p><strong>Origin:</strong> @_entity.Origin</p>
                    <p><strong>Destination:</strong> @_entity.Destination</p>
                    <p><strong>DeliveryService:</strong> @_entity.DeliveryService</p>
                    <p><strong>Contents:</strong> @_entity.Contents</p>
                    <p><strong>LaunchDate:</strong> @_entity.LaunchDate</p>
                    <p><strong>EtaDays:</strong> @_entity.EtaDays</p>
                    <p><strong>EstimatedArrivalDate:</strong> @_entity.EstimatedArrivalDate</p>
                </div>
            </div>

            <div class="mt-3">
                <h5>History</h5>
                @foreach (var i in _entity.History)
                {
                    <div class="border-bottom py-2">
                        <strong>@i.Status</strong>
                        <br>
                        <small>@i.Timestamp</small>
                    </div>
                }
            </div>
        }
    }

    

    <!-- Help Dialog -->
    @if (showHelp)
    {
        <div class="modal show d-block" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Help - Variable Barcode</h5>
                        <button type="button" class="btn-close" @onclick="CloseHelp"></button>
                    </div>
                    <div class="modal-body">
                        <p>Please enter a value for variable <strong>barcode</strong>.</p>
                        <ul>
                            <li>Barcode can be any text value</li>
                        </ul>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" @onclick="CloseHelp">OK</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>