@page "/parcels"
@rendermode InteractiveServer

<h2>Parcels</h2>
<ul class="parcels">
    @foreach (var item in items)
    {
        <li @onclick=@(e => onSelect(item)) class="@(item == selectedItem ? "selected" : "")">
            <span class="badge">@item.Barcode</span> @item.Status
        </li>
    }
</ul>

<ParcelDetail item=@selectedItem></ParcelDetail>

@code {
    List<GetParcelWithHistoryResponse> items { get; set; } = new List<GetParcelWithHistoryResponse>
        {
            new GetParcelWithHistoryResponse() { Barcode = "11", Status = "bla 11" },
            new GetParcelWithHistoryResponse() { Barcode = "22", Status = "bla 22" },
        };

    GetParcelWithHistoryResponse selectedItem { get; set; }
    void onSelect(GetParcelWithHistoryResponse item)
    {
        selectedItem = item;
    }
}